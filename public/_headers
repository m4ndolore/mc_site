# Cloudflare Pages headers
# Format: /path
#   Header-Name: value

# Immutable caching for hashed assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# No caching for HTML pages (always revalidate)
/*.html
  Cache-Control: public, max-age=0, must-revalidate

/
  Cache-Control: public, max-age=0, must-revalidate
